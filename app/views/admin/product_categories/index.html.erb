<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Product Categories</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Product Categories Table
        <%= link_to 'New Product Category', new_admin_bar_product_category_path, :class=>"btn btn-primary btn-sm pull-right adjust_bottom" %>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="product_categories_table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
          <% @admin_product_categories.each do |admin_product_category| %>
            <tr class="odd gradeX">
              <td><%= link_to admin_product_category.name, admin_bar_product_category_path(admin_product_category.bar, admin_product_category) %></td>
              <td><%= admin_product_category.description %></td>
              <td>
              <%= link_to 'Edit', edit_admin_bar_product_category_path(admin_product_category.bar, admin_product_category), :class=>"btn btn-primary btn-sm" %>
              <%= link_to 'Delete', admin_bar_product_category_path(admin_product_category.bar, admin_product_category), method: :delete, data: { confirm: 'Are you suadmin_bar_product_category_pathre?' }, :class=>"btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#product_categories_table').DataTable({
        responsive: true
    });
});
</script>
