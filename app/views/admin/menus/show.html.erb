<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Menu</h1>
        <%= @admin_menu.description %>
        <p class="pull-right"><%= link_to 'Edit', edit_admin_bar_menu_path(@admin_menu.bar, @admin_menu), :class=> "btn btn-primary btn-sm adjust_bottom" %></p>
    </div>
    <!-- /.col-lg-12 -->
<div class="col-lg-12">
  
</div>
<br><br><br><br><br><br><br><br>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
    <div class="panel-heading">
      Menu
      <div class="pull-right">
        <%= link_to "Back to Bar", admin_bar_path(@admin_menu.bar), :class=> "btn btn-default btn-sm adjust_bottom" %>
        <%= link_to "New Product Category", new_admin_bar_menu_product_category_path(@admin_menu.bar, @admin_menu), :class=> "btn btn-primary btn-sm adjust_bottom" unless @admin_menu.extra.present? %>
      </div>
    </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <% if @admin_menu.extra.present? and @admin_menu.extra.file_type == 'application/pdf' %>
          <iframe src="<%= @admin_menu.extra.file.url %>" style="width:100%; height:700px;" frameborder="0"></iframe>
        <% elsif @admin_menu.extra.present? %>
          <img src="<%= @admin_menu.extra.file.url %>">
          <br><br>
        <% end %>
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <% @admin_menu.product_categories.each do |product_category| %>
                  <tr>
                    <td colspan="2">
                      <h4><strong><%= product_category.name%></strong></h4>
                    </td>
                    <td><%= link_to 'Edit', edit_admin_bar_menu_product_category_path(@admin_menu.bar, @admin_menu, product_category), :class=> "btn btn-primary btn-sm" %>
                      <%= link_to 'Delete', admin_bar_menu_product_category_path(@admin_menu.bar, @admin_menu, product_category), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-sm" %>
                    </td>
                  </tr>
                    <% product_category.products.each do |product| %>
                    <tr>
                      <th><%= product.name %></th>
                      <td><%= product.description %></td>
                      <td><%= number_to_currency product.price %></td>
                    </tr>
                    <% end %>
                <% end %>
                <tr>
                  <td colspan="3">
                    
                    <%#= link_to 'Product Categories', admin_bar_menu_product_categories_path(@admin_menu.bar, @admin_menu), :class=> "btn btn-success" %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>

</div>


