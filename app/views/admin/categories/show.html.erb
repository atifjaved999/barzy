<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Category
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <th>Name</th>
                <td><%= @admin_category.name %></td>
              </tr>
<!--               <tr>
                <th>Description</th>
                <td><%#= @admin_category.description %></td>
              </tr> -->
              <tr>
              <tr>
                <th>Photo</th>
                <td>
                  <% if @admin_category.photo.present? %>
                        <img src="<%= @admin_category.medium %>">
                        <%else%>
                        <img src="/assets/default.gif" width="250px" height="170px">
                   <%end%>
                </td>
              </tr>
              <td>
                <%= link_to 'Back', admin_categories_path, :class=> "btn btn-default" %>
                <%= link_to 'Edit', edit_admin_category_path(@admin_category), :class=> "btn btn-primary" %>
              </td>
              <td>
              </td>
              </tr>

            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>

