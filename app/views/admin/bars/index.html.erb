  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Bars</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->

<%= render "search_form" %>

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Bars Table
          <%= link_to 'New Bar', new_admin_bar_path, :class=>"btn btn-primary btn-sm pull-right adjust_bottom" %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">

          <table width="100%" class="table table-striped table-bordered table-hover" id="bars_table">
            <thead>
              <tr>
                <th width="20%">Name</th>
                <th >Address</th>
                <th>Zip Code</th>
                <th>Contact No</th>
                <th>Website</th>
                <th width="15%">Actions</th>
              </tr>
            </thead>
            <tbody>
            <% @admin_bars.each do |admin_bar| %>
              <tr class="odd gradeX">
                <td><%= link_to admin_bar.name, admin_bar_path(admin_bar) %></td>
                <td><%= admin_bar.address.truncate(30) rescue '' %></td>
                <td><%= admin_bar.zip_code %></td>
                <td><%= admin_bar.contact_no %></td>
                <td><%= admin_bar.website %></td>
                <td>
                <%= link_to 'Edit', edit_admin_bar_path(admin_bar), :class=>"btn btn-primary btn-sm" %>
                <%= link_to 'Delete', admin_bar_path(admin_bar), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-sm" %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <% if @admin_bars.present? %>
          <div class="pull-left" style="margin-top: -5px">
            <%= page_entries_info @admin_bars, entry_name: '' %>
          </div>
          <div class="pull-right"><%= paginate @admin_bars %></div>
          <% end %>
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>

